# Database Connection String (Required)
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://username:password@host:port/database

# Session Secret for cookie encryption (Required)
# Generate a strong random string (min 32 chars), e.g.: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_min_32_chars

# JWT Secret for token encryption (Recommended)
# Generate a strong random string, e.g.: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_min_32_chars

# Google OAuth credentials (Required for Google login)
# Create these at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# LinkyVicky URL shortener service (Optional but recommended)
# Contact LinkyVicky for API credentials if needed
LINKYVICKY_API_KEY=your_linkyvicky_api_key
LINKYVICKY_API_URL=https://api.linkyvicky.com

# OpenAI API credentials (Required for AI link insights)
OPENAI_API_KEY=your_openai_api_key

# Node Environment (Required, default: development)
# Options: development, production, test 
NODE_ENV=development

# Domain configured for cookies and CORS (Required in production)
# For production, set to your application domain
APP_DOMAIN=yourdomain.com